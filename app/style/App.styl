html,body
  height 100%
  width 100%
  position relative
  margin 0
  padding 0

#container
  position absolute
  top 0
  bottom 0
  left 0
  right 0

.story-line
  .nav-bar
    background black
    color white
  main
    width 100%
    height 100%
    display flex
    flex-direction column
    justify-content center
    align-items center
    padding 20px
    > svg
      -webkit-user-select none
      -moz-user-select none
      -ms-user-select none
    .buttons-part
      width 100%
      height 40px
      display flex

.dropdown-toggle
  border-bottom 3px solid #222
  color #fafafa
  &:hover
    border-bottom 3px solid #cc7a6f
    color #cc7a6f